<div class="banner">
  <div class="rotateimg180 image" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1570821574759-c104ca40f7b4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2001&q=80);"></div>
  <div>
    <h1><em>What can I get you?</em></h1>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col">
        <h1>Browse our famous cocktails</h1>
        <p>Mixology is a fine art</p>
        <div class="cards">
            <% @cocktails.each do |cocktail| %>
                <%= link_to cocktail_path(cocktail) do %>
                  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url('<%= cocktail.image %>')">
                    <%= cocktail.name %>
                  </div>
                <% end %>
            <% end %>
        </div>
    </div>
  </div>
</div>





